# Clean Temporary Directory
import commands p=posix

function usage {
  echo "Cleans $TEMPDIR"
} ;

while [ $# -gt 0 ]; do
  case "$1" in
    -?|-h|--help)
      usage; exit
      ;;
    *)
    ;;
  esac
  shift
done

try {
  # debug a strang bug
  [ x"$TEMPDIR"x != x"$XROOT/tmp"x ] && {
    echo "PANIC!  TEMPDIR CHANGED?!?!"
    echo "$TEMPDIR"
    exit 1
  }
  # if tempdir is accidently null, don't do it!
  [ -n "$TEMPDIR" ] && p:rm -rf $TEMPDIR/*
}
catch X {
  echo $X
  return 1
} finally {
  return 0
}